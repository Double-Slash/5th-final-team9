<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


        <TextView
            android:id="@+id/page_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하루 목표를\n설정해주세요."
            android:textSize="30dp"
            android:layout_marginTop="96dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/bold_text"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/sub_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_text"
            android:layout_marginStart="25dp"
            android:text="STEP 4. 잠금화면 Quiz 정답률"
            android:layout_marginTop="18dp"
            android:textSize="16sp"
            android:textColor="@color/bold_text"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

                <EditText
                    android:id="@+id/test_edit_intro"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:textSize="70sp"
                    android:textStyle="bold"
                    android:textColor="@color/bold_text"
                    android:background="@drawable/shape_rectangle_shadow"
                    android:paddingTop="23dp"
                    android:paddingBottom="20dp"
                    android:paddingHorizontal="5dp"
                    android:gravity="center"
                    android:hint="00"
                    android:inputType="numberDecimal"
                    android:importantForAutofill="no">
                </EditText>

                <TextView
                    android:id="@+id/unit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:text="%"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="@color/bold_text"/>

        </LinearLayout>
</RelativeLayout>
