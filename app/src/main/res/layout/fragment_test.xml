<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="40dp"
    android:paddingHorizontal="20dp">


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Test"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/bold_text"/>

    <TextView
        android:id="@+id/test_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_text"
        android:textSize="16dp"
        android:textColor="#090707"
        android:text="테스트할 그룹을 터치해주세요"
        android:visibility="gone"/>


    <GridView
        android:id="@+id/test_grid_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_test_start"
        android:layout_below="@id/title_text"
        android:choiceMode="multipleChoice"
        android:numColumns="2"
        android:paddingTop="30dp" />

    <Button
        android:id="@+id/btn_test_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="테스트 시작하기"
        android:textColor="#000000"
        android:textSize="18dp"
        android:background="@drawable/shape_rectangle_mint_coners"
        android:padding="15dp"/>


</RelativeLayout>